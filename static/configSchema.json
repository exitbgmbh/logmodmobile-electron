{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://blisstribute.de/logmodmobile-electron-config-schema.json",
  "properties": {
    "app": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "autoUpdateCheckInterval": {
          "type": "integer"
        },
        "heartbeatInterval": {
          "type": "integer"
        },
        "gsPrintExecutable": {
          "type": "string"
        },
        "username": {
          "type": ["string", "null"]
        },
        "password": {
          "type": ["string", "null"]
        },
        "persistentLogin": {
          "type": ["boolean"]
        }
      },
      "additionalProperties": false
    },
    "scale": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "baud": {
          "type": "integer"
        },
        "command": {
          "description": "the (hex) chars to send to scale by serial",
          "type": "array"
        },
        "parserDelimiter": {
          "description": "the (hex) chars to parse a scale result",
          "type": "array"
        }
      },
      "additionalProperties": false
    },
    "invoicing": {
      "type": "object",
      "properties": {
        "watchBoxes": {
          "type": ["string", "null"]
        }
      },
      "additionalProperties": false
    },
    "shipping": {
      "type": "object",
      "patternProperties": {
        "^([A-Za-z0-9]*)+$": {
          "description": "shipment type code from blisstribute",
          "type": "object",
          "properties": {
            "printing": {
              "type": "object",
              "properties": {
                "shipmentLabelPrinter": {
                  "type": ["string", "null"]
                },
                "rotate": {
                  "type": "boolean"
                }
              },
              "additionalProperties": false
            },
            "polling": {
              "type": "object",
              "properties": {
                "fileExport": {
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "string"
                    },
                    "pattern": {
                      "type": "string"
                    },
                    "encoding": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                },
                "fileImport": {
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "string"
                    },
                    "pattern": {
                      "type": "string"
                    },
                    "encoding": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "printing": {
      "type": "object",
      "properties": {
        "defaultInvoiceSlipPrinter": {
          "type": ["string", "null"]
        },
        "defaultDeliverySlipPrinter": {
          "type": ["string", "null"]
        },
        "defaultReturnSlipPrinter": {
          "type": ["string", "null"]
        },
        "defaultShipmentLabelPrinter": {
          "type": ["string", "null"]
        },
        "defaultProductLabelPrinter": {
          "type": ["string", "null"]
        },
        "rotateProductLabel": {
          "type": "boolean"
        },
        "printAdditionalDocuments": {
          "type": "boolean"
        },
        "requestInvoiceDocumentsMerged": {
          "type": "boolean"
        },
        "defaultInvoiceSlipPrintCountCC": {
          "type": "integer"
        },
        "defaultInvoiceSlipPrintCountEU": {
          "type": "integer"
        },
        "defaultInvoiceSlipPrintCountTC": {
          "type": "integer"
        },
        "advertisingMediumConfig": {
          "type": "object",
          "patternProperties": {
            "^([A-Z]*)([0-9]*)+$": {
              "description": "advertising medium code from blisstribute",
              "type": "object",
              "properties": {
                "invoiceSlipPrinter": {
                  "type": ["string", "null"]
                },
                "deliverySlipPrinter":{
                  "type": ["string", "null"]
                },
                "returnSlipPrinter": {
                  "type": ["string", "null"]
                },
                "invoiceSlipPrintCountCC":{
                  "type": "integer"
                },
                "invoiceSlipPrintCountEU": {
                  "type": "integer"
                },
                "invoiceSlipPrintCountTC":{
                  "type": "integer"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}